{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "format": "prettier \"packages/*/src/**/*.{ts,tsx,js,css,graphql}\" --write"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  }
}
